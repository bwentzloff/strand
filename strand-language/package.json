{
  "name": "strand-vscode-extension",
  "displayName": "Strand Language Support",
  "description": "A VSCode extension for the Strand programming language.",
  "version": "1.0.0",
  "publisher": "YourName",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "strand",
        "aliases": ["Strand", "strand"],
        "extensions": [".strand"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "strand",
        "scopeName": "source.strand",
        "path": "./syntax/strand.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "strand",
        "path": "./snippets/strand.code-snippets"
      }
    ]
  },
  "main": "./extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "vscode": "^1.75.0"
  },
  "dependencies": {
    "d3-graphviz": "^5.0.0"
  }
}
